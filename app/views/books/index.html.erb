<div class = "success">
  <%= flash[:notice] %>
</div>
<h2>Books</h2>
<table>
<tr>
    <th class = "tablespace">Title</th>
    <th class = "tablespace">Body</th>
    <th colspan = "3" class = "tablespace"></th>
</tr>
<% @books.each do |book| %>
  <tr>
    <td class = "tablespace"><%= book.title %></td>
    <td class = "tablespace"><%= book.body %></td>
    <td class = "tablespace"><%= link_to "Show", book_path(book.id) %></td>
    <td class = "tablespace"><%= link_to "Edit", edit_book_path(book.id) %></td>
    <td class = "tablespace"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
<% end %>
</table>


<h3>New books</h3>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class = "error-text"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <p><%= f.submit 'Create Book' %></p>
<% end %>